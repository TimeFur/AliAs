{
	"name": "screenshot",
	
	"description": "Screen shot api",
	"manifest_version": 2,
	"version": "0.1",
	
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"content_scripts": [
		{
			"matches": ["http://127.0.0.1:8000/alias/"],
			"js": ["content.js"]
		}
	],
	
	"permissions": ["storage", "activeTab", "downloads"]
}