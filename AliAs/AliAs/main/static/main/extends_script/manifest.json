{
	"name": "screenshot",
	
	"description": "Screen shot api",
	"manifest_version": 2,
	"version": "0.1",
	
	"permissions": ["storage", "activeTab", "downloads"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
	
}